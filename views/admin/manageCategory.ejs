<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Categories</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-6">

  <h1 class="text-3xl font-bold mb-6 text-center">All Categories</h1>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
      <thead class="bg-gray-200 text-gray-700">
        <tr>
          <th class="py-3 px-4 text-left">Image</th>
          <th class="py-3 px-4 text-left">Name</th>
          <th class="py-3 px-4 text-left">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(category => { %>
          <tr class="border-t border-gray-200 hover:bg-gray-50">
            <td class="py-3 px-4">
              <img src="<%= category.imageUrl %>" alt="<%= category.name %>" class="h-16 w-24 object-cover rounded-md">
            </td>
            <td class="py-3 px-4 font-medium text-lg"><%= category.name %></td>
            <td class="py-3 px-4">
              <div class="flex space-x-3">
                <a href="/category/edit/<%= category._id %>" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Edit</a>

                <form action="/category/<%= category._id %>?_method=DELETE" method="POST" onsubmit="return confirmDelete(this)">
                  <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">Delete</button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script>
    function confirmDelete(form) {
      return confirm("Are you sure you want to delete this category?");
    }
  </script>

</body>
</html>
