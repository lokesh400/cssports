<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Upload Product</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #f5f7fa;
      padding: 30px;
    }

    .container {
      max-width: 600px;
      margin: auto;
      background: white;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    label {
      font-weight: 600;
      margin-top: 15px;
      display: block;
    }

    input, textarea {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    .size-group {
      display: flex;
      gap: 10px;
      margin-top: 10px;
    }

    button {
      margin-top: 20px;
      padding: 10px 15px;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
    }

    .add-btn {
      background-color: #007bff;
      color: white;
    }

    .submit-btn {
      background-color: #28a745;
      color: white;
      width: 100%;
    }

    input[type="file"] {
      padding: 4px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Upload Product</h2>
    <form action="/add/new/product" method="POST" enctype="multipart/form-data">
      <label>Name:</label>
      <input type="text" name="name" required>

      <label>Description:</label>
      <textarea name="description" rows="3"></textarea>

      <label>Brand:</label>
      <input type="text" name="brand">

      <label>Keywords (comma separated):</label>
      <input type="text" name="keywords">

      <label>Category:</label>
      <input type="text" name="category" required>

      <label>Product Image:</label>
      <input type="file" name="file" accept="image/*" required>

      <label>Size & Price:</label>
      <div id="sizes">
        <div class="size-group">
          <input type="text" name="sizes[0][size]" placeholder="Size">
          <input type="text" name="sizes[0][price]" placeholder="Price">
        </div>
      </div>
      <button type="button" class="add-btn" onclick="addSize()">+ Add Size</button>

      <button type="submit" class="submit-btn">Submit Product</button>
    </form>
  </div>

  <script>
    let sizeIndex = 1;
    function addSize() {
      const sizes = document.getElementById('sizes');
      const group = document.createElement('div');
      group.className = 'size-group';
      group.innerHTML = `
        <input type="text" name="sizes[${sizeIndex}][size]" placeholder="Size">
        <input type="text" name="sizes[${sizeIndex}][price]" placeholder="Price">
      `;
      sizes.appendChild(group);
      sizeIndex++;
    }
  </script>
</body>
</html>
