<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Upload Product</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(to right, #e3f2fd, #f5f7fa);
      padding: 40px 20px;
    }

    .container {
      max-width: 650px;
      margin: auto;
      background: white;
      padding: 30px 35px;
      border-radius: 15px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    }

    h2 {
      text-align: center;
      color: #333;
      margin-bottom: 25px;
    }

    label {
      font-weight: 600;
      display: block;
      margin-top: 20px;
      color: #444;
    }

    input,
    textarea,
    select {
      width: 100%;
      padding: 10px 12px;
      margin-top: 8px;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 15px;
      transition: all 0.3s ease;
    }

    input:focus,
    textarea:focus,
    select:focus {
      border-color: #007bff;
      outline: none;
      box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
    }

    .size-group {
      display: flex;
      gap: 15px;
      margin-top: 10px;
    }

    .add-btn,
    .submit-btn {
      margin-top: 25px;
      padding: 12px 18px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s;
    }

    .add-btn {
      background-color: #007bff;
      color: white;
    }

    .add-btn:hover {
      background-color: #0056b3;
    }

    .submit-btn {
      background-color: #28a745;
      color: white;
      width: 100%;
    }

    .submit-btn:hover {
      background-color: #218838;
    }

    input[type="file"] {
      padding: 8px;
      background: #f9f9f9;
      border: 1px dashed #ccc;
      cursor: pointer;
    }

    @media (max-width: 500px) {
      .size-group {
        flex-direction: column;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <h2>Upload Product</h2>
    <form action="/add/new/product" method="POST" enctype="multipart/form-data">
      <label>Name:</label>
      <input type="text" name="name" required>

      <label>Description:</label>
      <textarea name="description" rows="3"></textarea>

      <label>Brand:</label>
      <input type="text" name="brand">

      <label>Keywords (comma separated):</label>
      <input type="text" name="keywords">

      <label for="category">Category:</label>
      <select name="category" id="category" required>
        <option value="">-- Select Category --</option>
        <option value="protein">Protein</option>
        <option value="gainer">Gainer</option>
        <option value="fishoil">Fish Oil</option>
        <option value="creatine">Creatine</option>
        <option value="bcaa">BCAA</option>
        <option value="booster">Testosterone Booster</option>
        <option value="pre">Pre-Workout</option>
        <option value="fat">Fat Burner</option>
        <option value="peanut">Peanut Butter</option>
        <option value="multivitamin">Multivitamin</option>
        <option value="collagen">Collagen</option>
        <option value="snacks">Snacks</option>
        <option value="shaker">Shaker</option>
        <option value="band">Resistance Band</option>
        <option value="mat">Yoga Mat</option>
        <option value="wrist">Wrist Support</option>
        <option value="tracker">Fitness Tracker</option>
        <option value="grip">Hand Grip</option>
      </select>

      <label>Product Image:</label>
      <input type="file" name="file" accept="image/*" required>

      <label>Size & Price:</label>
      <div id="sizes">
        <div class="size-group">
          <input type="text" name="sizes[0][size]" placeholder="Size">
          <input type="text" name="sizes[0][price]" placeholder="Price">
        </div>
      </div>
      <button type="button" class="add-btn" onclick="addSize()">+ Add Size</button>

      <button type="submit" class="submit-btn">Submit Product</button>
    </form>
  </div>

  <script>
    let sizeIndex = 1;

    function addSize() {
      const sizes = document.getElementById('sizes');
      const group = document.createElement('div');
      group.className = 'size-group';
      group.innerHTML = `
        <input type="text" name="sizes[${sizeIndex}][size]" placeholder="Size">
        <input type="text" name="sizes[${sizeIndex}][price]" placeholder="Price">
      `;
      sizes.appendChild(group);
      sizeIndex++;
    }
  </script>
</body>

</html>
