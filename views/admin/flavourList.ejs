<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Product Flavours</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 py-10 px-4">

  <div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">Manage Product Flavours</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <% flavours.forEach(flavour => { %>
        <div class="bg-white shadow rounded-lg p-4">
          <img src="<%= flavour.images[0] %>" alt="Image" class="w-full h-40 object-cover rounded-md mb-4" />

          <h2 class="text-lg font-semibold mb-1"><%= flavour.productId.name %></h2>
          <p class="text-sm text-gray-600">Flavour: <%= flavour.flavour %></p>
          <p class="text-sm text-gray-500">id: <%= flavour._id || 'N/A' %></p>

          <div class="mt-4 space-y-1">
            <p class="text-sm font-medium">Sizes:</p>
            <ul class="list-disc ml-5 text-sm text-gray-700">
              <% flavour.sizes.forEach(s => { %>
                <li><%= s.size %> - â‚¹<%= s.price %></li>
              <% }) %>
            </ul>
          </div>
          <a href="/upload/flavour/images/<%= flavour._id %>">
            <button type="submit" class="mt-4 w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition">
              Add Images
            </button>
          </a>
        </div>
      <% }) %>
    </div>
  </div>

</body>
</html>
