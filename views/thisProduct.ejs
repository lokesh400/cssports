    <script id="gallery-script">
      document.addEventListener("DOMContentLoaded", function () {
        const mainImage = document.getElementById("main-product-image");
        const currentImageNum = document.getElementById("current-image");
        const totalImages = document.getElementById("total-images");
        const thumbnails = document.querySelectorAll(".gallery-thumbnail");
        const prevButton = document.getElementById("prev-image");
        const nextButton = document.getElementById("next-image");
        let currentIndex = 0;
        const imageCount = thumbnails.length;
        totalImages.textContent = imageCount;
        function updateMainImage(index) {
          thumbnails.forEach((thumb) => thumb.classList.remove("active"));
          thumbnails[index].classList.add("active");
          const imgSrc = thumbnails[index].querySelector("img").src;
          mainImage.src = imgSrc;
          currentImageNum.textContent = index + 1;
          currentIndex = index;
        }
        thumbnails.forEach((thumbnail, index) => {
          thumbnail.addEventListener("click", () => {
            updateMainImage(index);
          });
        });
        prevButton.addEventListener("click", () => {
          let newIndex = currentIndex - 1;
          if (newIndex < 0) newIndex = imageCount - 1;
          updateMainImage(newIndex);
        });
        nextButton.addEventListener("click", () => {
          let newIndex = currentIndex + 1;
          if (newIndex >= imageCount) newIndex = 0;
          updateMainImage(newIndex);
        });
      });
    </script>
    <script id="size-selection-script">
      document.addEventListener("DOMContentLoaded", function () {
        const sizeOptions = document.querySelectorAll(".size-option");
        const addToCartMainButton = document.getElementById("add-to-cart-main");
        const addToCartButtons = document.querySelectorAll(".size-option button");
        addToCartButtons.forEach((button) => {
          button.addEventListener("click", (e) => {
            e.stopPropagation();
            const sizeOption = button.closest(".size-option");
            const size = sizeOption.getAttribute("data-size");
            const price = sizeOption.getAttribute("data-price");
            showToast(`Added ${size} capsules to cart - $${price}`);
          });
