<section id="categories" class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4">Shop by Category</h2>
    <p class="text-gray-600 text-center mb-12 max-w-2xl mx-auto">Discover our wide range of premium supplements designed to support your specific health and fitness needs.</p>
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-4">

      <% for(let i=0;i<categories.length;i++) {%>

         <a href="/search/products?query=<%= categories[i].name %>" class="category-card bg-[#EBF5FF] rounded-xl overflow-hidden group hover:shadow-lg transition-all duration-300">
        <div class="aspect-square relative">
          <img src="<%= categories[i].imageUrl %>" alt="Protein" class="w-full h-full object-cover">
        </div>
        <div class="p-4 text-center">
          <h3 class="font-semibold text-gray-900"><%= categories[i].name.toUpperCase() %></h3>
          <p class="text-primary text-sm font-medium">UPTO 70% OFF</p>
        </div>
      </a>

      <%}%>  

    </div>
  </div>
</section>